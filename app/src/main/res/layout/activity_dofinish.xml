<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".activity.DOFinishActivity">
    <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:titleTextColor="@android:color/white"
            android:background="#68A6CF"
            android:theme="?attr/actionBarTheme"
            android:minHeight="?attr/actionBarSize"
            android:id="@+id/toolbar"/>
    <LinearLayout
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <RelativeLayout
                android:layout_marginBottom="20dp"
                android:background="#BBADAD"
                android:layout_width="match_parent"
                android:layout_height="70dp">
            <TextView
                    android:id="@+id/orderid"
                    android:text="Order ID : "
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:layout_margin="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:layout_toRightOf="@+id/orderid"
                    android:id="@+id/orderIdText"
                    android:layout_alignParentEnd="true"
                    android:text="190283912839"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:layout_margin="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
        </RelativeLayout>
        <LinearLayout
                android:background="#45BBB5B5"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="30dp">
            <LinearLayout
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <TextView
                        android:textColor="@android:color/black"
                        android:textStyle="bold"
                        android:layout_margin="10dp"
                        android:textSize="20sp"
                        android:text="Status : "
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                <TextView
                        android:textColor="@android:color/black"
                        android:textAlignment="textEnd"
                        android:textStyle="bold"
                        android:layout_margin="10dp"
                        android:textSize="20sp"
                        android:text="Finish"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
            </LinearLayout>
            <View android:layout_width="match_parent"
                  android:layout_height="3dp"
                  android:background="#A5A3A3"
                  android:layout_marginBottom="30dp"/>
            <LinearLayout
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <TextView
                        android:textColor="@android:color/black"
                        android:textStyle="bold"
                        android:layout_margin="10dp"
                        android:textSize="20sp"
                        android:text="Start TIme    : "
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                <TextView
                        android:id="@+id/startTimeDetail"
                        android:textColor="@android:color/black"
                        android:textAlignment="textEnd"
                        android:textStyle="bold"
                        android:layout_margin="10dp"
                        android:textSize="20sp"
                        android:text="12.00"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <TextView
                        android:textColor="@android:color/black"
                        android:textStyle="bold"
                        android:layout_margin="10dp"
                        android:textSize="20sp"
                        android:text="End TIme      : "
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                <TextView
                        android:id="@+id/endTimeDetail"
                        android:textColor="@android:color/black"
                        android:textAlignment="textEnd"
                        android:textStyle="bold"
                        android:layout_margin="10dp"
                        android:textSize="20sp"
                        android:text="24.00"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
            </LinearLayout>
            <View android:layout_width="match_parent"
                  android:layout_height="3dp"
                  android:background="#A5A3A3"
                  android:layout_marginBottom="30dp"/>
            <LinearLayout
                    android:layout_marginVertical="20dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <TextView
                        android:textColor="@android:color/black"
                        android:textStyle="bold"
                        android:layout_margin="10dp"
                        android:textSize="20sp"
                        android:text="Ordered by      : "
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                <TextView
                        android:id="@+id/customerDetail"
                        android:textColor="@android:color/black"
                        android:textAlignment="textEnd"
                        android:textStyle="bold"
                        android:layout_margin="10dp"
                        android:textSize="20sp"
                        android:text="Customer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
            </LinearLayout>
            <RelativeLayout
                    android:gravity="center_horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <TextView
                        android:id="@+id/rated"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="You Rated"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/black"
                        android:layout_marginTop="30dp"
                        android:layout_marginBottom="20dp"
                        android:textAlignment="center"/>
                <RatingBar
                        android:isIndicator="true"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@+id/rated"
                        android:id="@+id/ratingBar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                <TextView
                        android:textStyle="bold"
                        android:textColor="@android:color/black"
                        android:textSize="20dp"
                        android:textAlignment="center"
                        android:id="@+id/textRating"
                        android:text="rating"
                        android:layout_below="@+id/ratingBar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                <Button
                        android:visibility="gone"
                        android:id="@+id/btn_rating"
                        android:text="Please rate our service"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@+id/ratingBar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
    <Button
            android:id="@+id/btn_report"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="REPORT AN ISSUE"
            android:background="#079AC9"
            android:textColor="#fff"/>
</LinearLayout>