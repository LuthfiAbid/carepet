<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.ReportActivity"
        android:orientation="vertical"
        android:background="#9CDCFF">
    <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:titleTextColor="@android:color/white"
            android:background="#68A6CF"
            android:theme="?attr/actionBarTheme"
            android:minHeight="?attr/actionBarSize"
            android:id="@+id/toolbar"/>
    <LinearLayout
            android:background="@drawable/linear_radius"
            android:layout_margin="20dp"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:orientation="vertical">
        <LinearLayout
                android:padding="5dp"
                android:background="#1275B6"
                android:layout_width="match_parent"
                android:layout_height="35dp">
            <TextView
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="15dp"
                    android:textColor="#fff"
                    android:text="CAREPET"
                    android:fontFamily="sans-serif"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                    android:layout_margin="17dp"
                    android:text="Finished"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    android:textColor="#1275B6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:id="@+id/current_time"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:text="27 Sept 2019 16.35"
                    android:layout_marginVertical="17dp"
                    android:textAlignment="textEnd"
                    android:layout_marginRight="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
        </LinearLayout>
        <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="#31000000">
        </View>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                    android:layout_margin="17dp"
                    android:text="Care pet"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    android:textColor="#1275B6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
            android:background="@drawable/linear_radius"
            android:layout_margin="20dp"
            android:layout_width="match_parent"
            android:layout_height="270dp"
            android:orientation="vertical">
        <TextView
                android:textSize="17sp"
                android:layout_margin="15dp"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:text="Laporkan Masalah"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="#31000000">
        </View>
        <EditText
                android:id="@+id/et_report"
                android:layout_marginVertical="20dp"
                android:layout_marginHorizontal="15dp"
                android:paddingLeft="20dp"
                android:hint="Problems . . ."
                android:inputType="textMultiLine"
                android:layout_width="match_parent"
                android:layout_height="100dp"/>
        <Button
                android:id="@+id/btn_report"
                android:textStyle="bold"
                android:textColor="#fff"
                android:background="@drawable/button_round"
                android:text="Submit"
                android:layout_gravity="center_horizontal"
                android:layout_width="200dp"
                android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>