<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".activity.CarepetActivity">
    <androidx.appcompat.widget.Toolbar
            android:layout_marginBottom="100dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:titleTextColor="@android:color/white"
            android:background="#68A6CF"
            android:theme="?attr/actionBarTheme"
            android:minHeight="?attr/actionBarSize"
            android:id="@+id/toolbar"/>
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:paddingTop="30dp">
        <TextView
                android:textStyle="bold"
                android:id="@+id/imagePetText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/imagePet"
                android:layout_alignTop="@+id/imagePet"
                android:layout_alignRight="@+id/imagePet"
                android:layout_alignBottom="@+id/imagePet"
                android:layout_alignParentTop="true"
                android:layout_centerVertical="true"
                android:layout_margin="1dp"
                android:gravity="center"
                android:text="Select pet image"
                android:textSize="20sp"
                android:textColor="@android:color/black"/>
        <ImageView
                android:alpha="0.45"
                android:scaleType="fitXY"
                android:layout_centerHorizontal="true"
                android:src="@drawable/img_placehlder"
                android:id="@+id/imagePet"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_marginBottom="20dp"/>
        <EditText
                android:hint="Nama Pelanggan"
                android:id="@+id/et_nama_pelanggan"
                android:layout_below="@+id/imagePet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/input_round"
                android:layout_marginHorizontal="40dp"
                android:paddingVertical="10dp"
                android:paddingHorizontal="15dp"
                android:layout_marginBottom="15dp"/>
        <EditText
                android:hint="Nomor Telepon"
                android:id="@+id/et_nomor_telepon"
                android:layout_below="@+id/et_nama_pelanggan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/input_round"
                android:layout_marginHorizontal="40dp"
                android:paddingVertical="10dp"
                android:paddingHorizontal="15dp"
                android:layout_marginBottom="15dp"/>
        <LinearLayout
                android:paddingHorizontal="40dp"
                android:id="@+id/ll"
                android:layout_below="@+id/et_nomor_telepon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            <EditText
                    android:layout_weight="2"
                    android:hint="Start time"
                    android:id="@+id/et_time_start"
                    android:layout_width="0dp"
                    android:gravity=""
                    android:layout_height="wrap_content"
                    android:background="@drawable/input_round"
                    android:paddingVertical="10dp"
                    android:paddingHorizontal="15dp"
                    android:layout_marginBottom="15dp"/>
            <TextView
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:text="Until"
                    android:textAlignment="center"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
            <EditText
                    android:layout_weight="2"
                    android:hint="End time"
                    android:id="@+id/et_time_end"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/input_round"
                    android:paddingVertical="10dp"
                    android:paddingHorizontal="15dp"
                    android:layout_marginBottom="15dp"/>
        </LinearLayout>
        <EditText
                android:id="@+id/et_note"
                android:layout_below="@+id/ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/input_round"
                android:layout_marginHorizontal="40dp"
                android:paddingVertical="10dp"
                android:paddingHorizontal="15dp"
                android:inputType="textMultiLine"
                android:hint="Catatan : "/>
        <Button
                android:id="@+id/btn_submit_order"
                android:textColor="#FFF"
                android:text="Submit"
                android:layout_marginTop="17dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/button_round"
                android:layout_below="@+id/et_note"
                android:layout_width="200dp"
                android:layout_height="wrap_content"/>
    </RelativeLayout>
</LinearLayout>